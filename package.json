{
  "name": "dj-app",
  "version": "1.0.0",
  "description": "DJ Console - A web-based DJ application with dual decks, beat detection, and waveform visualization",
  "main": "src/index.html",
  "scripts": {
    "lint": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format": "prettier --write 'src/**/*.{js,css,html}'",
    "format:check": "prettier --check 'src/**/*.{js,css,html}'",
    "serve": "python3 -m http.server 8000 --directory src",
    "serve:alt": "python -m SimpleHTTPServer 8000"
  },
  "keywords": [
    "dj",
    "audio",
    "music",
    "web-audio-api",
    "waveform",
    "beat-detection",
    "drum-and-bass"
  ],
  "author": "Svisionair",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/FuroreBalistico/DJ-app.git"
  }
}
